.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.divider {
  height: 2rpx;
  background-color: #e2e8f0;
  margin-bottom: 30rpx;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 10rpx;
}

.unit {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 8rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 80rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  gap: 20rpx;
}

.calculate-btn {
  flex: 1;
  margin-right: 0;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #3b82f6;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.reset-btn {
  flex: 1;
  margin-left: 0;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #e5e7eb;
  color: #4b5563;
  font-size: 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.result {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 32rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.risk-level {
  font-size: 28rpx;
  padding: 16rpx;
  border-radius: 8rpx;
}

.risk-high {
  color: #b91c1c;
  background-color: #fee2e2;
}

.risk-low {
  color: #047857;
  background-color: #d1fae5;
}

.notes {
  padding: 20rpx;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

.notes text {
  display: block;
  margin-bottom: 6rpx;
} 